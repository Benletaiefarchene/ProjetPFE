{% extends 'base.html.twig' %}

{% block title %}Add Post{% endblock %}

{% block body %}


 

	<!-- Dashboard Content
	================================================== -->
	<div class="dashboard-content-container" data-simplebar>
		<div class="dashboard-content-inner" >
			
			<!-- Dashboard Headline -->
			<div class="dashboard-headline">
				<h3>Post a Job</h3>

				<!-- Breadcrumbs -->
				<nav id="breadcrumbs" class="dark">
					<ul>
						<li><a href="#">Home</a></li>
						<li><a href="#">Dashboard</a></li>
						<li>Post a Job</li>
					</ul>
				</nav>
			</div>
	
			<!-- Row -->
			<div class="row">

				<!-- Dashboard Box -->
				<div class="col-xl-12">
					<div class="dashboard-box margin-top-0">

						<!-- Headline -->
						<div class="headline">
							<h3><i class="icon-feather-folder-plus"></i> Job Submission Form</h3>
						</div>


                        {{ form_start(Offre) }}
                        
						<div class="content with-padding padding-bottom-10">
							<div class="row" >
                    
								<div class="col-xl-4" >
									<div class="submit-field" >
									{{ form_widget(Offre.titre,{'attr':{'type':'text','class':'form-control','placeholder':'Title...' ,'text-align':'center'}}) }}
                                  
                                    </div>
								</div>
                                <div class="col-xl-4" >
									<div class="submit-field" >
									
                                    {{ form_widget(Offre.type,{'attr':{'type':'text','class':'form-control','placeholder':'type...'}}) }}
								
                                    </div>
								</div>
                                <div class="col-xl-4" >
									<div class="submit-field" >
									
									{{ form_widget(Offre.categorie,{'attr':{'type':'text','class':'form-control','placeholder':'categorie...'}}) }}
									
                                    </div>
								</div>

                                        
									
                              
								

								<div class="col-xl-6">
									<div class="submit-field">
                                    {{ form_widget(Offre.salaire,{'attr':{'type':'text','class':'form-control','placeholder':'salaire...'}}) }}
									{{ form_widget(Offre.description,{'attr':{'type':'textarea','class':'form-control','placeholder':'Description...'}}) }}
										
									
									</div>
								</div>
                                    	<div class="col-xl-6">
									     <div class="submit-field">
										
										 {{ form_widget(Offre.date_Offre,{'attr':{'type':'date','class':'form-control','placeholder':'Title...'}}) }}
									 
                                          </div>
								        </div>
							</div>
						</div>
						<div class="col-xl-12">
				<button type="submit" class="button full-width button-sliding-icon ripple-effect margin-top-10">Add Post<i class="icon-material-outline-arrow-right-alt"></i></button>
				</div>
                        {{ form_end(Offre) }}
					</div>
				</div>

				

			</div>
			<!-- Row / End -->

		

		</div>
	</div>
	<!-- Dashboard Content / End -->

{% endblock %}

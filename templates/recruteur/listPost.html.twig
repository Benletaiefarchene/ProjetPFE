				<!-- Job Listing Details -->
				<div
					class="job-listing-details">
					<!-- Logo -->
					<div class="job-listing-company-logo">
						<img src="{{ asset ('uploads/images/' ~ posts.recruteur.photo ) }}" alt="">
					</div>

					<!-- Details -->
					<div class="job-listing-description">

						<h4 class="job-listing-company">{{posts.recruteur.user.nom	}}


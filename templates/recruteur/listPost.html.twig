						<h3 class="job-listing-title">{{posts.titre}}</h3>
						<p class="job-listing-text">{{posts.description}}</p>
					</div>


				

				</div>

				<!-- Job Listing Footer -->
				<div class="job-listing-footer">
					<ul>
							<li>
							<i class="icon-material-outline-business"></i>
							{{posts.recruteur.ville}}</li>

							<li>
							<i class="icon-material-outline-location-on"></i>
							{{posts.recruteur.pays}}</li>
							<li>
							<i class="icon-material-outline-account-balance-wallet"></i>
							{{posts.salaire}}
							$</li>
							{# <div class="validorblock" style="text-align: right;margin-top: -30px;;">
								<li>
									
										{% if date('now')|date('d-m-Y ') > posts.DateFinOffre|date('d-m-Y ') %}
											<li>
												<h5>
													<span class="label label-success">Valide</span>
												</h5>
											</li>
										{% elseif date('now')|date('d-m-Y ') < posts.DateFinOffre|date('d-m-Y ') %}
											<li>
												<h5>
													<span class="label label-danger">blocked</span>
												</h5>
											</li>
										{% endif %}
									
								</li>
					</div> #}

					</ul>
				</div>
			</a>
			{% endfor %}
			

			<!-- Pagination -->
					<div class="clearfix"></div>
								<div class="row">
						<div class="col-md-12">
					<!-- Pagination -->
				<div class="pagination-container margin-top-30 margin-bottom-60" style="text-align: center;">
			 {{ knp_pagination_render(posts) }}
				</div>
			</div>
		</div>
	<!-- Pagination / End -->

		</div>
		{# {% endif %} #}
	
</div></div></div></div></div><!-- Dashboard Content / End -->{% endblock %}

{% block body %}
<!-- Titlebar
================================================== -->
<div id="titlebar" class="gradient">
	<div class="container">
		<div class="row">
			<div class="col-md-12">

				<h2>{% trans %}Log In {% endtrans %}</h2>

				<!-- Breadcrumbs -->
				<nav id="breadcrumbs" class="dark">
					<ul>
						<li><a href="#">{% trans %}Home {% endtrans %}</a></li>
						<li>{% trans %}Log In {% endtrans %}</li>
					</ul>
				</nav>

			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xl-5 offset-xl-3">


			<div class="login-register-page">
				<!-- Welcome Text -->
				<div class="welcome-text">
					<h3>{% trans %}We're glad to see you again! {% endtrans %}</h3>
					<span>{% trans %} Don't have an account? {% endtrans %} <a href="{{path('role')}}">{% trans %} Sign Up! {% endtrans %}</a></span>
				</div>

				{% for message in app.flashes('message') %}
				<div class="alert alert-success" role="alert">
				{{message}}
				</div>
					
				{% endfor %}
<form method="post" id="login-form">            				
    {% if error %}

        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
         {% trans %}   You are logged in as {% endtrans %} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{% trans %} Logout {% endtrans %}</a>
        </div>
    {% endif %}
	
    <div class="input-with-icon-left">
						<i class="icon-material-baseline-mail-outline"></i>
                        <input type="email" class="input-text with-border" value="{{ last_username }}" name="email" id="inputEmail"  class="form-control" autocomplete="email" required autofocus placeholder="Email">
    
	</div>
    <div class="input-with-icon-left">
		<i class="icon-material-outline-lock"></i>
		<input type="password" class="input-text with-border" name="password" id="inputPassword"  required autocomplete="current-password" placeholder="Password"/>
			
    </div>
    
    
    
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
		<span> <a href="{{path('app_forgotten_password')}}">{% trans %}Forgot your password ? {% endtrans %}</a></span>

   <button class="button full-width button-sliding-icon ripple-effect margin-top-10" type="submit" form="login-form">{% trans %}Log In {% endtrans %} <i class="icon-material-outline-arrow-right-alt"></i></button>
   			
</form>


		</div>
	</div>
</div>
</div>
{% endblock %}
